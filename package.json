{
  "name": "@playht/playht-nodejs-sdk",
  "version": "0.0.2",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "description": "NodeJS SDK to use PlayHT generative AI text-to-speech APIs",
  "files": [
    "dist",
    "package.json"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "./dist/index.js",
  "repository": "https://github.com/playht/playht-nodejs-sdk",
  "author": "nobody@play.ht",
  "license": "MIT",
  "scripts": {
    "build": "tsc --emitDeclarationOnly && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "test": "jest",
    "lint": "prettier --write . && eslint --ext .ts ./src --fix && tsc --noEmit",
    "verify": "yarn check && yarn test",
    "check": "tsc --noEmit && prettier --check . && eslint --ext .ts ./src",
    "release": "yarn && yarn build && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.3",
    "prettier": "3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@3.6.2"
}
